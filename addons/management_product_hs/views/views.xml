   <!-- Define a new tree view for displaying the product-POS configuration records -->
        <record id="view_management_product_hs_tree" model="ir.ui.view">
            <field name="name">Product HS Tree View</field>
            <field name="model">management.product_hs</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="id_product"/>
                    <field name="id_pos"/>
                    <field name="hide_product_in_pos" widget="boolean_toggle"/>
                    <!-- <button name="toggle_hide_in_pos" string="Toggle Hide in Point of Sale" type="object"/> -->
                </tree>
            </field>
        </record>

        <!-- Define a new form view for editing individual product-POS configuration records -->
        <record id="view_management_product_hs_form" model="ir.ui.view">
            <field name="name">Product HS Form View</field>
            <field name="model">management.product_hs</field>
            <field name="arch" type="xml">
                <form>
                    <field name="id_product"/>
                    <field name="id_pos"/>
                    <field name="hide_product_in_pos"/>
                </form>
            </field>
        </record>

        <!-- Define a new action for opening the product-POS tree view -->
        <record id="action_management_product_hs" model="ir.actions.act_window">
            <field name="name">Product HS</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">management.product_hs</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click the Create button to add a new product-POS configuration record.
                </p>
            </field>
            <!-- <button name="toggle_hide_product_in_pos" string="Toggle Hide in Point of Sale" type="object"/> -->

        </record>

        <!-- Add a new menu item for accessing the product-POS management views -->
        <menuitem id="menu_management_product_hs" name="Product HS"/>
        <menuitem id="menu_management_product_hs_tree" name="Product HS" parent="menu_management_product_hs" action="action_management_product_hs"/>
  
  </data> 
